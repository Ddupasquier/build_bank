{
  "name": "buildbank",
  "version": "0.1.0",
  "description": "BuildBank - material price tracking and quoting tool for construction contractors",
  "main": "electron/dist/main.js",
  "author": "BuildBank",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite build --watch",
    "dev:electron": "concurrently -k \"npm:dev:electron:build\" \"npm:dev:electron:start\"",
    "dev:electron:build": "tsc -p tsconfig.electron.json --watch",
    "dev:electron:start": "cross-env ELECTRON_RUN_AS_NODE= wait-on dist/index.html electron/dist/main.js && electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "postinstall": "electron-builder install-app-deps",
    "package": "npm run build && electron-builder",
    "migrate": "ts-node scripts/migrate.ts"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.48.0",
    "better-sqlite3": "^9.0.0",
    "electron-log": "^5.1.2",
    "electron-store": "^9.0.0",
    "playwright": "^1.48.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "tailwindcss": "^3.4.3",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.7",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.3",
    "electron-builder": "^24.13.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.buildbank.desktop",
    "productName": "BuildBank",
    "files": [
      "dist/**/*",
      "electron/dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.business"
    },
    "win": {
      "target": ["nsis", "msi"]
    },
    "directories": {
      "buildResources": "build"
    }
  }
}
