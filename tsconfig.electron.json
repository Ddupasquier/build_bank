{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "electron/dist",
    "types": ["node", "electron"]
  },
  "include": ["electron/**/*"],
  "exclude": ["src", "dist"]
}
